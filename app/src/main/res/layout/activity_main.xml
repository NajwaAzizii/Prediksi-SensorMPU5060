<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HEADER - Tombol Kembali -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnKembali"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/kembali"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Kembali" />
        </RelativeLayout>

        <!-- JUDUL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Input Data Sensor MPU6050"
            android:textColor="@color/putih"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- SUBTITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan nilai pembacaan sensor (offline):"
            android:textColor="@color/putih"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- INPUT FIELDS dengan Label di Samping -->
        <!-- AcX -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="14dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="AcX :"
                android:textColor="@color/putih"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/putih">

                <EditText
                    android:id="@+id/etAcX"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Isi AcX disini"
                    android:textColorHint="#B0B0B0"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:inputType="numberSigned|numberDecimal"
                    android:textColor="@color/hitam"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- AcY -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="14dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="AcY :"
                android:textColor="@color/putih"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/putih">

                <EditText
                    android:id="@+id/etAcY"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Isi AcY disini"
                    android:textColorHint="#B0B0B0"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:inputType="numberSigned|numberDecimal"
                    android:textColor="@color/hitam"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- AcZ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="14dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="AcZ :"
                android:textColor="@color/putih"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/putih">

                <EditText
                    android:id="@+id/etAcZ"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Isi AcZ disini"
                    android:textColorHint="#B0B0B0"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:inputType="numberSigned|numberDecimal"
                    android:textColor="@color/hitam"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- GyX -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="14dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="GyX :"
                android:textColor="@color/putih"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/putih">

                <EditText
                    android:id="@+id/etGyX"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Isi GyX disini"
                    android:textColorHint="#B0B0B0"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:inputType="numberSigned|numberDecimal"
                    android:textColor="@color/hitam"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- GyY -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="14dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="GyY :"
                android:textColor="@color/putih"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/putih">

                <EditText
                    android:id="@+id/etGyY"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Isi GyY disini"
                    android:textColorHint="#B0B0B0"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:inputType="numberSigned|numberDecimal"
                    android:textColor="@color/hitam"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- GyZ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="GyZ :"
                android:textColor="@color/putih"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
